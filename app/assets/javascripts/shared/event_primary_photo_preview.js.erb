var eventPrimaryPhotoPreview = function(){
  var init = function(selectors){
    $(selectors.input).change(function () {
      var $photoPreview = $(selectors.fullPreview);
      $photoPreview.attr("src", "<%= asset_path('events/primary_default.png') %>");

      var input = this;

      if (input.files && input.files[0]) {
        var reader = new FileReader();

        reader.onload = function (e) {
          $photoPreview.attr("src", e.target.result);
        }

        reader.readAsDataURL(input.files[0]);
      }
    });
  };

  return {
    init: init
  };
}();
