  </div>

  <div class="field">
    <%= f.label :profession %><br />
    <%= f.text_field :profession %>
  </div>

  <div class="field">
    <%= f.label :greeting %><br />
    <%= f.text_field :greeting %>
  </div>

  <div class="field">
    <%= f.label :bio %><br />
    <%= f.text_field :bio %>
  </div>

  <div class="field">
    <%= f.label :mobile_number %><br />
    <%= f.text_field :mobile_number %>
    <%= f.label :mobile_number_visible %><br />
    <%= f.check_box :mobile_number_visible, checked: false %>
  </div>

  <div class="field">
    <%= f.label :favorite_cuisine %><br />
    <%= f.text_field :favorite_cuisine %>
  </div>

  <div class="actions">
    <%= f.submit 'Save profile' %>
  </div>
