<%= simple_form_for @user, :url => { :action => "update_password" } do |f| %>
  <%= f.error_notification %>

  <%= f.input :current_password, autocomplete: 'off' %>
  <%= f.input :password, autocomplete: 'off', label: 'New password' %>
  <%= f.input :password_confirmation, label: 'New password confirmation' %>
  <%= f.button :submit, 'Update password' %>
<% end %>
