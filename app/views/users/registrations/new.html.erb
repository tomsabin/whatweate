<div class="user-sign-up">
  <h2 class="user-sign-up__title">
    Sign up
  </h2>

  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), defaults: { required: false } do |f| %>
    <div class="user-sign-up__errors">
      <%= f.error_notification %>
    </div>
    <%= f.input :email,
          input_html: { class: "user-sign-up__input" },
          label_html: { class: "user-sign-up__label" } %>
    <%= f.input :first_name,
          input_html: { class: "user-sign-up__input" },
          label_html: { class: "user-sign-up__label" } %>
    <%= f.input :last_name,
          input_html: { class: "user-sign-up__input" },
          label_html: { class: "user-sign-up__label" } %>
    <%= f.input :password, hint: "(8 characters minimum)",
          input_html: { class: "user-sign-up__input" },
          label_html: { class: "user-sign-up__label" },
          hint_html: { class: "user-sign-up__hint" } %>
    <%= f.input :password_confirmation,
          input_html: { class: "user-sign-up__input" },
          label_html: { class: "user-sign-up__label" } %>
    <div class="user-sign-up__center-container">
      <%= f.button :submit, "Sign up", class: "user-sign-up__submit"  %>
    </div>
  <% end %>

  <div class="user-sign-up__divider">
    <span class="user-sign-up__divider-text">
      or
    </span>
  </div>

  <div class="user-sign-up__center-container">
    <%= link_to "Facebook", user_omniauth_authorize_path(:facebook), class: "user-sign-up__facebook" %>
    <%= link_to "Twitter", user_omniauth_authorize_path(:twitter), class: "user-sign-up__twitter" %>
  </div>
</div>
