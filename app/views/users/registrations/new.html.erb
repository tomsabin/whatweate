<div class="wip">
  <h2>Sign up</h2>

  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), defaults: { required: false, error: true } do |f| %>
    <%= f.error_notification %>
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :password, hint: "(8 characters minimum)" %>
    <%= f.input :password_confirmation %>
    <%= f.button :submit, "Sign up" %>
  <% end %>

  <div class="social-networks">
    <%= link_to "Facebook", user_omniauth_authorize_path(:facebook) %>
    <%= link_to "Twitter", user_omniauth_authorize_path(:twitter) %>
  </div>
</div>
