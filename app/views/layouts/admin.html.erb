<!DOCTYPE html>
<html lang="en">
  <%= render partial: "layouts/head", locals: { layout: "admin", title: "WhatWeAte Admin" } %>
  <body id="<%= page_id %>">

    <nav class="primary-background-color">
      <div class="container">
        <div class="nav-wrapper">
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="mdi-navigation-menu"></i></a>
          <ul class="left hide-on-med-and-down">
            <%= render partial: 'admin/shared/navigation' %>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <%= render partial: 'admin/shared/navigation' %>
          </ul>
          <ul class="right">
            <li>
              <%= link_to("Sign out", destroy_admin_session_path, method: :delete) if admin_signed_in? %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <script>$(".button-collapse").sideNav();</script>

    <div class="container">
      <div class="flash-messages">
        <div class="row">
          <div class="col s12">
            <% if notice.present? %>
              <p class="notice"><%= notice %></p>
            <% end %>
            <% if alert.present? %>
              <p class="alert"><%= alert %></p>
            <% end %>
          </div>
        </div>
      </div>
      <%= yield -%>
    </div>
  </body>
</html>
