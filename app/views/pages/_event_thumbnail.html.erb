<article class="event-thumbnail">
  <a href="<%= link %>" title="<%= event.title %>" data-ga="events">
    <img src="<%= event.primary_photo.thumb.url %>" alt="<%= event.title %>" class="primary-photo">
    <div class="content">
      <h4><%= event.title %></h4>
      <p class="date"><%= event.formatted_date %></p>
      <span class="label price"><%= humanized_money_with_symbol event.price %></span>
      <p class="short-description"><%= event.short_description %></p>
      <p class="venue"><%= event.location %></p>
    </div>
  </a>
</article>
