        </article>
        <article class="how-it-works-item">
          <div class="how-it-works-item__container">
            <div class="how-it-works-item__icon-content">
              <%= image_tag "icons/paid.png", alt: "Get paid!", class: "how-it-works-item__icon" %>
            </div>
            <div class="how-it-works-item__text-content">
              <h6 class="how-it-works-item__heading">Get paid!</h6>
              <p class="how-it-works-item__text">Money in your account within 24hrs after your events</p>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>

<section class="event-listings" name="events">
  <h3 class="event-listings__title">Upcoming events</h3>
  <% if @events.blank? %>
    <p class="event-listings__no-listings-text">
      <%= t("failure.no_events") %>
    </p>
  <% else %>
    <div class="event-listing__events">
      <% @events.each do |event| %>
        <div class="event-listing__event-thumbnail">
          <%= render partial: "partials/event_thumbnail", locals: { link: event_path(event), event: event } %>
        </div>
      <% end %>
    </div>
  <% end %>
</section>

