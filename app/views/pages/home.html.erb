<section class="proposition">
  <div class="proposition__container">
    <div class="proposition__content">
      <h1 class="proposition__title">Bringing People Together Over Food.</h1>
      <h2 class="proposition__subtitle">Find delicious intimate dining experiences near you.</h2>
      <%= link_to "Join a table", root_path(anchor: "events"), data: { ga: "conversion" }, class: "proposition__cta" %>
    </div>
  </div>
</section>

<section class="newsletter" name="newsletter">
  <p class="newsletter__title">
    Join our tribe of social food lovers
  </p>
  <form class="newsletter__form" id="newsletterForm" action="//whatweate.us9.list-manage.com/subscribe?u=3ae9a01a53d464033afcc3009&amp;id=eb7d06a555" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank">
    <input class="newsletter__hidden-input" type="text" name="b_3ae9a01a53d464033afcc3009_eb7d06a555" tabindex="-1" value="">

    <input class="newsletter__first-name-input" type="text" value="" name="FNAME" id="mce-FNAME" placeholder="First Name" required><!--
    --><input class="newsletter__last-name-input" type="text" value="" name="LNAME" id="mce-LNAME" placeholder="Last Name" required><!--
    --><input class="newsletter__email-input" type="email" value="" name="EMAIL" id="mce-EMAIL" placeholder="Email address" required><!--
    --><input class="newsletter__form-submit" type="submit" value="Let Me In!" name="subscribe" id="mc-embedded-subscribe">
  </form>

  <div class="newsletter__response" id="newsletterResponse">
    <p></p>
  </div>
</section>

