<section class="proposition">
  <div class="proposition-container">
    <div class="proposition-content">
      <h1>Bringing People Together Over Food.</h1>
      <h2>Find delicious intimate dining experiences near you.</h2>
      <%= link_to "Join a table", root_path(anchor: "events"), data: { ga: "conversion" }, class: "btn" %>
    </div>
  </div>
</section>

<section class="container newsletter-container">
  <p class="newsletter-title">
    Join our tribe of social food lovers
  </p>
  <form id="newsletter" action="//whatweate.us9.list-manage.com/subscribe?u=3ae9a01a53d464033afcc3009&amp;id=eb7d06a555" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="newsletter input-field" target="_blank">
    <input type="text" name="b_3ae9a01a53d464033afcc3009_eb7d06a555" tabindex="-1" value="" style="position:absolute;left:-9999px;">

    <input type="text" value="" name="FNAME" class="input name first-name" id="mce-FNAME" placeholder="First Name" required><!--
    --><input type="text" value="" name="LNAME" class="input name last-name" id="mce-LNAME" placeholder="Last Name" required><!--
    --><input type="email" value="" name="EMAIL" class="input email" id="mce-EMAIL" placeholder="Email address" required><!--
    --><input type="submit" class="submit" value="Let Me In!" name="subscribe" id="mc-embedded-subscribe">
  </form>
  <div id="response" class="response"></div>
</section>

<section class="item-list-container">
  <a name="how_it_works"></a>
  <div class="item-list">
    <input type="radio" name="toggle-content-mobile" id="content-1-mobile" class="toggle toggle-content-1" checked>
    <input type="radio" name="toggle-content-mobile" id="content-2-mobile" class="toggle toggle-content-2">

    <div class="label-container">
      <label class="btn-header label-content-1" for="content-1-mobile">Guests</label>
      <label class="btn-header label-content-2" for="content-2-mobile">Hosts</label>
    </div>

    <div class="content-container">
      <div class="togglable-content togglable-content-1">
        <article class="item">
          <div class="content">
            <div class="image-container">
              <%= image_tag "icons/browse.png", alt: "Find an event" %>
            </div>
            <div class="text-container">
              <h6>Find an event</h6>
              <p>Discover delicious meals by hosts who love cooking</p>
            </div>
          </div>
        </article>
        <article class="item">
          <div class="content">
            <div class="image-container">
              <%= image_tag "icons/join.png", alt: "Join a table" %>
            </div>
            <div class="text-container">
              <h6>Join a table</h6>
              <p>Book your seat and wait for the location to be revealed</p>
            </div>
          </div>
        </article>
        <article class="item">
          <div class="content">
            <div class="image-container">
              <%= image_tag "icons/talk.png", alt: "Make new friends" %>
            </div>
            <div class="text-container">
              <h6>Make new friends</h6>
              <p>Show up for a fun and memorable evening!</p>
            </div>
          </div>
        </article>
      </div>

      <div class="togglable-content togglable-content-2">
        <article class="item">
          <div class="content">
            <div class="image-container">
              <%= image_tag "icons/submit.png", alt: "Introduce yourself" %>
            </div>
            <div class="text-container">
              <h6>Introduce yourself</h6>
              <p>Submit your application and begin listing events for free</p>
            </div>
          </div>
        </article>
        <article class="item">
          <div class="content">
            <div class="image-container">
              <%= image_tag "icons/create.png", alt: "Let the cooking begin" %>
            </div>
            <div class="text-container">
              <h6>Let the cooking begin</h6>
              <p>Design your menus and prepare to host</p>
            </div>
          </div>
        </article>
        <article class="item">
          <div class="content">
            <div class="image-container">
              <%= image_tag "icons/paid.png", alt: "Get paid!" %>
            </div>
            <div class="text-container">
              <h6>Get paid!</h6>
              <p>Money in your account within 24hrs after your events</p>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <section class="event-listings" name="events">
    <h3 class="event-listings__title">Upcoming events</h3>
    <% if @events.blank? %>
      <p class="event-listings__no-listings-text">
        <%= t("failure.no_events") %>
      </p>
    <% else %>
      <div class="event-listing__events">
        <% @events.each do |event| %>
          <div class="event-listing__event-thumbnail">
            <%= render partial: "event_thumbnail", locals: { link: event_path(event), event: event } %>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
</div>

<script>
  mailChimpNewsletter.init("#newsletter", "#response");
</script>
