<%= simple_form_for [:admin, @host], defaults: { error: false } do |f| %>
  <%= render partial: "form_fields", locals: { f: f } %>

  <div class="row">
    <div class="col s12">
      <%= f.button :submit, "Create host", data: { disable_with: "Creating" } %>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $("select#host_user_id").material_select();
  });
</script>
