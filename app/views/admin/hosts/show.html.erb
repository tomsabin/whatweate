 <div class="row">
  <div class="col s12 l8">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">
          <%= @host.name %>
        </span>
        <% if @user.present? %>
          <p>User: <%= @user.full_name %></p>
        <% end %>
      </div>
      <div class="card-action">
        <%= link_to "Edit host", edit_admin_host_path(@host) %>
      </div>
    </div>
  </div>
</div>
