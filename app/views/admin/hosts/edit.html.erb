<%= simple_form_for [:admin, @host], defaults: { error: false } do |f| %>
  <%= render partial: "form_fields", locals: { f: f } %>

  <div class="row">
    <div class="col s12">
      <%= f.button :submit, "Save host" %>
      <%= link_to "Delete host", admin_host_path(@host),
                                 method: :delete,
                                 class: 'btn deep-orange',
                                 data: { confirm: "Are you sure you want to delete this host?" } %>
      <%= link_to "Cancel", admin_host_path(@host), class: "btn grey" %>
    </div>
  </div>
<% end %>

<script>
  $(document).ready(function() {
    $("select#host_user_id").material_select();
    Materialize.updateTextFields();
  });
</script>
