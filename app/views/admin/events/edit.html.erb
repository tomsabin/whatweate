<%= simple_form_for [:admin, @event], defaults: { error: false } do |f| %>
  <%= render partial: "form_fields", locals: { f: f } %>

  <div class="row">
    <div class="col s12">
      <%= f.button :submit, "Save event", data: { disable_with: "Saving" } %>
      <%= link_to "Delete event", admin_event_path(@event),
                                  method: :delete,
                                  class: 'btn deep-orange',
                                  data: { confirm: "Are you sure you want to delete this event?" } %>
      <%= link_to "Cancel", admin_event_path(@event), class: "btn grey" %>
    </div>
  </div>
<% end %>
