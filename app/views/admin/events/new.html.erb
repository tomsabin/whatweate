<%= simple_form_for [:admin, @event], defaults: { error: false } do |f| %>
  <%= render partial: "form_fields", locals: { f: f } %>

  <div class="row">
    <div class="col s12">
      <%= f.button :submit, "Create event", data: { disable_with: "Creating" } %>
      <%= f.button :submit, "Preview", class: "teal lighten-2" %>
    </div>
  </div>
<% end %>
