<div class="wip">
  <%= render partial: "partials/event_thumbnail", locals: { link: "#", event: @event } %>
  <div class="event-show">
    <%= render partial: "events/event_content", locals: { event: @event, host: @event_host, user: @event_user, guests: [] } %>
  </div>

  <%= form_for [:admin, @event] do |f| %>
    <%= f.hidden_field :host_id %>
    <%= f.hidden_field :title %>
    <%= f.hidden_field :date %>
    <%= f.hidden_field :price %>
    <%= f.hidden_field :seats %>
    <%= f.hidden_field :location %>
    <%= f.hidden_field :location_url %>
    <%= f.hidden_field :description %>
    <%= f.hidden_field :menu %>

    <%= link_to "Back", admin_event_path(@event) %>
    <%= link_to "Edit event", edit_admin_event_path(@event) %>
    <%= link_to "Approve", approve_admin_event_path(@event), method: :patch if @event.pending? %>
  <% end %>
</div>
